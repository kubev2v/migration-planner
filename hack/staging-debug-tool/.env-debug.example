# Common environment variables for Migration Planner debug environment (both modes)
MIGRATION_PLANNER_MIGRATIONS_FOLDER=/app/migrations
MIGRATION_PLANNER_OPA_POLICIES_FOLDER=/app/policies
DB_HOST=planner-db-staging
DB_USER=demouser
DB_PASS=demopass
DB_NAME=planner
MIGRATION_PLANNER_ISO_PATH=/tmp/debug-rhcos.iso
NO_SEED=true

# Repository paths - update these to match your local setup
MIGRATION_PLANNER_REPO=/path/to/migration-planner
